<?xml version="1.0" encoding="ISO-8859-1" ?>
<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
  xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">
                  
  <portlet-skin>
    <!-- this is the package name war -->
    <!-- important for css since tomcat uses package name to get resources -->
    <application-name>eportlet</application-name>
    <portlet-name>eportlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/DefaultSkin/webui/Stylesheet.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>                  

  <portlet>
    <name>eportlet</name>
    <module>
      <script>
        <path>/javascript/eportlet.js</path>
      </script>
	    <depends>
	      <module>jquery</module>
	    </depends>
    </module>
  </portlet>
    
</gatein-resources>